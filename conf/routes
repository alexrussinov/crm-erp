# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.login
GET     /getproducts                controllers.Application.getProducts
GET     /products                   controllers.Application.showProducts
GET     /searchproducts/:value      controllers.Application.searchProducts(value : Option[String])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

GET     /account                    controllers.AccountCreation.createAccountForm
POST    /createaccount              controllers.AccountCreation.createAccount